<h1>Listing shortposts</h1>

<table>
  <tr>
    <th>Spost</th>
    <th>Usr</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shortposts.each do |shortpost| %>
  <tr>
    <td><%= shortpost.spost %></td>
    <td><%= shortpost.usr_id %></td>
    <td><%= link_to 'Show', shortpost %></td>
    <td><%= link_to 'Edit', edit_shortpost_path(shortpost) %></td>
    <td><%= link_to 'Destroy', shortpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

